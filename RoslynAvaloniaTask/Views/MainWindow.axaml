    <StackPanel Orientation="Vertical">
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="1"
                    MaterialOpacity="0.65">
                </ExperimentalAcrylicMaterial>
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
    
        <Button Content="Visualize Code"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Margin="15 15 15 5"
                Command="{Binding VisualizeCodeCommand}">
        </Button>
    
        <TextBlock Margin="15 10 15 5">Insert your code:</TextBlock> <!-- Zmniejszenie marginesÃ³w TextBlocka -->
    
        <TextBox Height="200" AcceptsReturn="True" TextWrapping="Wrap"
                 Margin="15 5 15 5"
                 Watermark="Enter your code here"
                 Text="{Binding CodeText, Mode=TwoWay}"
        />
    
        <TextBox
            Height="200"
            Text="{Binding DisplayText}" Margin="15 5"
        />
    </StackPanel>

    
